{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Requirement",
  "type": "object",
  "required": [
    "id",
    "title",
    "status",
    "priority",
    "owner",
    "created_at",
    "modified_at",
    "links",
    "tags"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z]{2,4}-\\d{3,5}$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "status": {
      "type": "string",
      "enum": [
        "DRAFT",
        "REVIEWED",
        "APPROVED",
        "BASELINED",
        "IMPLEMENTED",
        "VERIFIED",
        "RETIRED"
      ]
    },
    "priority": {
      "type": "string",
      "enum": [
        "P0",
        "P1",
        "P2",
        "P3"
      ]
    },
    "owner": {
      "type": "string"
    },
    "created_at": {
      "type": "string"
    },
    "modified_at": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "target"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "target": {
            "type": "string"
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "traceability_notes": {
      "type": "string"
    }
  },
  "additionalProperties": true
}